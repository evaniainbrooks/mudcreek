.row.justify-content-center.mt-3
  .col-12.col-sm-10.col-md-6.col-lg-5.col-xl-4
    .card.shadow-sm.border-0
      .card-body.p-4.p-md-5
        %h1.card-title.h4.mb-1 Sign in
        %p.text-muted.small.mb-4 Welcome back
        = form_with url: session_path do |f|
          .mb-3
            = f.label :email_address, "Email address", class: "form-label"
            = f.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "you@example.com",
              value: params[:email_address],
              class: "form-control"
          .mb-3
            = f.label :password, "Password", class: "form-label"
            = f.password_field :password, required: true, autocomplete: "current-password", placeholder: "Password", maxlength: 72, class: "form-control"
          .d-grid.mt-4
            = f.submit "Sign in", class: "btn btn-primary"
        .text-center.mt-3
          = link_to "Forgot your password?", new_password_path, class: "text-decoration-none small"
